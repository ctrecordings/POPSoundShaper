{
    "$schema": "https://raw.githubusercontent.com/Pure-D/code-d/master/json-validation/dub.schema.json",

    "name": "popss",

    "license": "Proprietery",
    "importPaths": [ "."],
    "sourcePaths": [ "."],
    "stringImportPaths": ["gfx", "fonts", "."],

    "copyright": "none",

    "lflags-windows-ldc": [
        "libcmt.lib",
        "/nodefaultlib:msvcrt.lib",
        "/nodefaultlib:vcruntime.lib"
    ],

    "dependencies":
    {
        "dplug:dsp": { "path": "../dplug-master" },
        "dplug:vst": { "path": "../dplug-master" },
        "dplug:au": { "path": "../dplug-master" },
        "dplug:gui": { "path": "../dplug-master" },
        "dplug:pbr-widgets": { "path": "../dplug-master" },
        "dplug:flat-widgets": {"path": "../dplug-master"},
        "ddsp": {"path": "../ddsp"},
        "ctrgui": {"path": "../ctrgui"}
    },

    "configurations": [
        {
            "name": "VST",
            "versions": ["VST"],
            "targetType": "dynamicLibrary",
            "lflags-osx": [ "-exported_symbols_list", "module-vst.lst", "-dead_strip" ]
        },
        {
            "name": "AU",
            "versions": ["AU"],
            "targetType": "dynamicLibrary",
            "lflags-osx": [ "-exported_symbols_list", "module-au.lst", "-dead_strip" ]
        }
    ]
}
